<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:background="@color/negroEX">
        <TextView
            android:id="@+id/txtVerNombreCoti"
            android:text="RESULTADO"
            android:layout_marginTop="10dp"
            android:layout_marginStart="150dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="520dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnBorrarCoti"
        android:layout_marginTop="620dp"
        android:backgroundTint="@color/rojo"
        android:text="Eliminar"
        android:fontFamily="@font/gotham"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:drawableEnd="@mipmap/icon_btn_delete"
        android:drawableRight="@mipmap/icon_btn_delete"
        android:layout_marginStart="210dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp" />
    <Button
        android:id="@+id/btnExportarCoti"
        android:text="GUARDAR"
        android:textSize="18sp"
        android:fontFamily="@font/gotham"
        android:textColor="@color/white"
        android:layout_marginTop="620dp"
        android:layout_marginStart="10dp"
        android:drawableEnd="@mipmap/icon_btn_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:drawableRight="@mipmap/icon_btn_export" />
</RelativeLayout>