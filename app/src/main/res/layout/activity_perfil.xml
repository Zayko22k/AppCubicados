                   android:layout_marginStart="20dp"
                   android:layout_marginTop="40dp"
                   android:textSize="18sp"
                   android:fontFamily="@font/gotham"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp" />
               <TextView
                   android:id="@+id/txtAP_Perfil"
                   android:text="xxxxxx"
                   android:textColor="@color/negroEX"
                   android:layout_marginStart="20dp"
                   android:textSize="18sp"
                   android:layout_marginTop="70dp"
                   android:fontFamily="@font/gotham"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp" />
               <TextView
                   android:id="@+id/txtAM_Perfil"
                   android:text="xxxxxx"
                   android:textColor="@color/negroEX"
                   android:layout_marginStart="20dp"
                   android:textSize="18sp"
                   android:layout_marginTop="100dp"
                   android:fontFamily="@font/gotham"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp" />
               <TextView
                   android:id="@+id/txtEmail_Perfil"
                   android:text="xxxxxx"
                   android:textColor="@color/negroEX"
                   android:layout_marginStart="20dp"
                   android:textSize="18sp"
                   android:layout_marginTop="130dp"
                   android:fontFamily="@font/gotham"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp" />
               <TextView
                   android:id="@+id/txtFecha_Perfil"
                   android:text="xxxxxx"
                   android:textColor="@color/negroEX"
                   android:layout_marginStart="20dp"
                   android:textSize="18sp"
                   android:layout_marginTop="160dp"
                   android:fontFamily="@font/gotham"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp" />
               <TextView
                   android:id="@+id/txtCelu_Perfil"
                   android:text="xxxxxx"
                   android:textColor="@color/negroEX"
                   android:layout_marginStart="20dp"
                   android:textSize="18sp"
                   android:layout_marginTop="190dp"
                   android:fontFamily="@font/gotham"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp" />
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="120dp"
               android:background="@color/negroEX"
               android:layout_marginStart="120dp"
               android:layout_height="25dp"
               android:layout_marginLeft="120dp">
               <TextView
                   android:id="@+id/text"
                   android:text="MI PERFIL"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="5dp"
                   android:textSize="18sp"
                   android:textColor="@color/white"
                   android:fontFamily="@font/gotham"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp" />
           </RelativeLayout>
<!--           Segundo Layout-->
           <RelativeLayout
               android:layout_width="match_parent"
               android:background="@color/white"
               android:layout_marginTop="305dp"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/text1"
                   android:text="SERVICIOS"
                   android:layout_marginStart="120dp"
                   android:textColor="@color/negroEX"
