                   android:fontFamily="@font/gotham"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp" />
               <TextView
                   android:id="@+id/txt3"
                   android:text="RECURRENTE POR "
